#Ch_selenium/example/tutorial3.py
from selenium import webdriver
from selenium.webdriver.common.keys import Keys
from bs4 import BeautifulSoup, BeautifulStoneSoup
from selenium.webdriver.support.ui import Select
import time

options = webdriver.ChromeOptions()
options.add_argument("--incognito")
options.add_argument("--window-size=1920x1080")
options.add_argument('--disable-extensions')
options.add_argument('--disable-gpu')
options.add_argument('--no-sandbox')

driver = webdriver.Chrome(
    executable_path = '/home/pjy/hackerton/chromedriver',
    chrome_options=options    
    ) #또는 chromedriver.exe
driver.implicitly_wait(15) # 묵시적 대기, 활성화를 최대 15초가지 기다린다.

url = "http://www.safekorea.go.kr/idsiSFK/neo/sfk/cs/contents/civil_defense/SDIJKM1402.html?menuSeq=57"
driver.get(url)
time.sleep(3)

select= Select(driver.find_element_by_id('sbRnArea1'))
select.select_by_value(value='6290000')
A=input("시군구 선택")
Aid=0
if A=='1':
    Aid=29110
elif A=='2':
    Aid=29140
elif A=='3':
    Aid=29155
elif A=='4':
    Aid=29170
else :
    Aid=29200
select2= Select(driver.find_element_by_id('sbRnArea2'))
select2.select_by_value(value=str(Aid))
click1 = driver.find_element_by_id('btnSearchOk')
click1.click()
time.sleep(5)
driver.quit() # 웹 브라우저 종료. driver.close()는 탭 종료
-- 웹 크롤링 사이트 출력 및 조회
